{
  "name": "tinyws",
  "version": "0.0.0",
  "type": "module",
  "description": "Tiny WebSocket middleware for Node.js based on ws.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./": {
      "import": "./dist/index.js"
    },
    "./package.json": {
      "import": "./package.json"
    }
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "test": "node --loader ts-node/esm --experimental-specifier-resolution=node node_modules/uvu/bin.js",
    "test:coverage": "c8 --include=src pnpm test",
    "test:report": "c8 report --reporter=text-lcov > coverage.lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talentlessguy/tinyws.git"
  },
  "keywords": [
    "ws",
    "express",
    "tinyhttp",
    "websocket",
    "middleware",
    "polka",
    "http",
    "server"
  ],
  "author": "v1rtl (https://v1rtl.site)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talentlessguy/tinyws/issues"
  },
  "homepage": "https://github.com/talentlessguy/tinyws#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.1",
    "@tinyhttp/app": "^1.3.3",
    "@types/express": "^4.17.11",
    "@types/node": "^15.0.2",
    "@types/ws": "^7.4.2",
    "c8": "^7.7.2",
    "express": "^4.17.1",
    "polka": "^1.0.0-next.14",
    "rollup": "^2.47.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "uvu": "^0.5.1",
    "ws": ">=7"
  },
  "peerDependencies": {
    "ws": ">=7"
  }
}
